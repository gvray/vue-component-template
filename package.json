{
  "name": "vue-component-template",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm run build:packages",
    "build:internal": "pnpm --filter \"./internal/*\" run build",
    "build:packages": "pnpm --filter \"./packages/*\" run build",
    "build:components": "pnpm --filter @vue-components/components run build",
    "build:theme": "pnpm --filter @vue-components/theme-chalk run build",
    "build:utils": "pnpm --filter @vue-components/utils run build",
    "build:hooks": "pnpm --filter @vue-components/hooks run build",
    "build:tokens": "pnpm --filter @vue-components/tokens run build",
    "dev:play": "pnpm --filter @vue-components/play run dev",
    "dev:docs": "pnpm --filter @vue-components/docs run dev",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "clean": "pnpm run clean:build",
    "clean:build": "rimraf dist packages/*/dist packages/*/es packages/*/lib internal/*/dist docs/.vitepress/dist play/dist",
    "clean:cache": "rimraf .vite .turbo node_modules/.cache .eslintcache *.tsbuildinfo **/*.tsbuildinfo",
    "clean:deps": "rimraf node_modules packages/*/node_modules internal/*/node_modules docs/node_modules play/node_modules pnpm-lock.yaml",
    "clean:all": "pnpm run clean:build && pnpm run clean:cache && pnpm run clean:deps",
    "clean:smart": "node scripts/clean.js",
    "reset": "pnpm run clean:all && pnpm install",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/ui": "^1.2.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/tsconfig": "^0.7.0",
    "c8": "^9.1.0",
    "eslint": "^9.22.0",
    "eslint-plugin-vue": "~10.0.0",
    "happy-dom": "^13.3.1",
    "jiti": "^2.4.2",
    "npm-run-all2": "^7.0.2",
    "prettier": "3.5.3",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "~5.8.0",
    "vite": "^6.2.4",
    "vite-plugin-dts": "^3.7.0",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vitest": "^1.2.0",
    "vue-tsc": "^2.2.8"
  }
}